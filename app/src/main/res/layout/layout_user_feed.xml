<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background_bubble"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/contact"
            android:layout_width="72dp" android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageViewAvatar" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>

    <TextView
            android:text="@string/anne_droid"
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/imageViewAvatar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/textViewName"/>
    <TextView
            android:text="@string/hey_miguel_have_you_tried_the_new_course_about_common_intent_actions"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMessage"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" app:layout_constraintStart_toEndOf="@+id/imageViewAvatar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/save_as_note"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textViewMessage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/buttonSave"/>

</androidx.constraintlayout.widget.ConstraintLayout>